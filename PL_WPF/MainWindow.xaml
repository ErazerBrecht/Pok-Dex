<controls:MetroWindow x:Class="PL_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="MainWindow" WindowState="Maximized">
    <Grid>
        
        <Grid Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="6*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <ListBox Name="PokemonListBox" SelectionChanged="PokemonListBox_OnSelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Pkdx_id}"></TextBlock>
                            <TextBlock Text="." Width="15"></TextBlock>
                            <TextBlock Text="{Binding Name}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <GroupBox Header="Information + Stats" Grid.Column="1" Name="StatsInfoGroupBox">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                
                    <GroupBox Header="Image" Name="ImageGroupBox">
                        <Image MaxHeight="250" Source="{Binding ImageURL}"></Image>
                    </GroupBox>
                    
                    <StackPanel Margin="15,0,0,0" Grid.Column="1" Name="NameStackPanel">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="18" FontWeight="Bold" Text="Name: " Margin="0,0,10,0"></TextBlock>
                            <TextBlock FontSize="18" FontWeight="Bold" Text="{Binding Name}"></TextBlock>
                        </StackPanel>
                    <DockPanel Margin="0,15,0,0">
                            <TextBlock  FontSize="18" FontWeight="Bold" Text="Types:" Margin="0,0,10,0"></TextBlock>
                        <ListBox Name="TypesListBox">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock FontSize="18" FontWeight="Bold" Text="{Binding Name}"></TextBlock>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                    </DockPanel>    
                        
                        
                    </StackPanel>
                    
                    <GroupBox Grid.Column="2" Header="Information" Name="Information" >
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Description:"></TextBlock>
                            <TextBlock Text="{Binding Description}" Margin="0,0,0,15"></TextBlock>
                            
                            <Grid Width="Auto">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Height:  "></TextBlock>
                                    <TextBlock Text="Weight:  "></TextBlock>
                                    <TextBlock Text="Catch Rate:  "></TextBlock>                   
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                    <TextBlock Text="{Binding Height}"></TextBlock>
                                    <TextBlock Text="{Binding Weight}"></TextBlock>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding CatchRate}"></TextBlock>
                                        <TextBlock Text="%"></TextBlock>
                                    </StackPanel>
                                </StackPanel>
                                

                            </Grid>


                        </StackPanel>
                    </GroupBox>
                    
                   
                </Grid>
            </GroupBox>
            
        </Grid>
        
    </Grid>
</controls:MetroWindow>
